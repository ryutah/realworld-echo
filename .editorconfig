# EditorConfig refs: https://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
tab_width = 4

[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

[*.{sql}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
